<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu_screen"
    tools:context="uberapp.itpvt.com.alquranmyapp.Activities.Player">
    <SeekBar
        android:layout_marginTop="100dp"
        android:id="@+id/seekBar"
        android:thumbTint="@color/Text_color"
        android:layout_width="match_parent"
        android:progressTint="@color/Text_color"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/start"
            android:background="@drawable/play_yellow"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/stop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/stop_yellow" />
        <Button
            android:id="@+id/pause"
            android:background="@drawable/pause_yellow"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/play_yellow"/>
        <Button
            android:id="@+id/download"
            android:layout_marginLeft="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/download_yellow"/>
    </LinearLayout>
</LinearLayout>