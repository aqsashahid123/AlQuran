<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="uberapp.itpvt.com.alquranmyapp.Activities.Player">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="80dp"
        android:src="@drawable/logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="19sp"
        android:textColorHint="@color/Text_color"
        android:textColor="@color/Text_color"
        android:layout_height="wrap_content"
        android:hint="Surah Name"
        android:id="@+id/s_name"
        />
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/Text_color"
        android:thumbTint="@color/Text_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/start"
            android:background="@drawable/play_yellow"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <Button
            android:id="@+id/stop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/stop_yellow" />
        <Button
            android:id="@+id/pause"
            android:background="@drawable/pause_yellow"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/play_yellow"/>
        <Button
            android:id="@+id/download"
            android:layout_marginLeft="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/download_yellow"/>
    </LinearLayout>
</LinearLayout>